<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- When we will get the mapping of /add, i.e whenever user will submit the form it will
    call /add mapping and here in servlet add mapping corresponds to com.servletjsp.AddServlet.
    i.e AddServlet class will be called. -->
    <display-name>Apache-Axis</display-name>
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>com.servletjsp.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <!-- SInce Add Servlet is calling SquareServlet so we need to crrate a mappping here
    we can see RequestDispatcher in AddServlet is calling sq, so here sq is mapped to
    SqServlet and hence square servlet will be called when sq is called.-->
    <servlet>
        <servlet-name>SqaureServlet</servlet-name>
        <servlet-class>com.servletjsp.SqServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SqaureServlet</servlet-name>
        <url-pattern>/sq</url-pattern>
    </servlet-mapping>
</web-app>